{
    "compilerOptions": {
      "target": "ES2022",
      "lib": ["ES2022", "DOM"],
      "module": "CommonJS",
      "moduleResolution": "node",
      "strict": false,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "noEmit": false,
      "outDir": "./dist",
      "declaration": true,
      "allowSyntheticDefaultImports": true,
      "isolatedModules": true
    },
    "include": [
      "index.ts",
      "createSmartAccount.ts",
      "simpleTransaction.ts", 
      "complexTransaction.ts",
      "complexBufferedTransaction.ts",
      "utils/**/*.ts",
      "clients/**/*.ts"
    ],
    "exclude": [
      "node_modules",
      "dist",
      "examples/**/*.ts",
      "scripts/**/*.ts",
      "tests/**/*.ts"
    ]
  }