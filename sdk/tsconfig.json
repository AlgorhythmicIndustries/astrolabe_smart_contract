{
    "compilerOptions": {
      "target": "ES2022",
      "lib": ["ES2022", "DOM"],
      "module": "ESNext",
      "moduleResolution": "bundler",
      "strict": false,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "noEmit": true,
      "declaration": false,
      "allowImportingTsExtensions": true
    },
    "include": [
      "**/*.ts"
    ],
    "exclude": [
      "node_modules",
      "dist",
      "examples/executeTransferTest.ts",
      "scripts/clean-buffers.ts",
      "tests/**/*.ts"
    ]
  }